<button id="{{ '%s_grid_bulk_action_%s'|format(grid.id, action.id) }}"
        class="dropdown-item js-bulk-action-ajax-btn {{ action.options.class }}"
        type="button"
        data-ajax-url="{{ action.options.ajax_route }}"
        data-modal-title="{{ action.options.modal_title }}"
        data-modal-close="{{ action.options.modal_close }}"
        data-modal-stop-processing="{{ action.options.modal_stop_processing }}"
        data-modal-errors-occurred="{{ action.options.modal_errors_occurred }}"
        data-modal-back-to-processing="{{ action.options.modal_back_to_processing }}"
        data-modal-download-error-log="{{ action.options.modal_download_error_log }}"
        data-modal-view-error-log="{{ action.options.modal_view_error_log }}"
        data-modal-error-log-title="{{ action.options.modal_error_log_title }}"
{% for attribute, value in action.options.attributes %}
        {{ attribute }}="{{ value }}"
        {% endfor %}
>
  {{ action.name }}
</button>
